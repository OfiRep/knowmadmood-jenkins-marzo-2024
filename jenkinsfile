pipeline {
    agent {
        label 'minion2'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '7',
                                  daystoKeepStr: '10'))
        timestamps()
    }

    parameters {
        string(name: 'VERSION', defaultValue: 'SNAPSHOT', )
    }

    stages {
        stage ('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage ('Maven Verify') {
            steps {
                println "mvn verify"
            }
        }

        stage ('Maven Test') {
            steps {
                println "mvn test"
            }
        }

        stage ('Maven Install') {
            steps {
                println "mvn install"
            }
        }

        stage ('Maven Test') {
            steps {
                sh 'touch file1.txt'
            }
        }
        
        stage ('Maven Test') {
            steps {
                sh 'touch file-"$VERSION".txt'
            }
        }
    }

    post {
        always {
            chuckNorris()
        }
    }
}